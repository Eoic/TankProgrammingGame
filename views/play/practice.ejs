<html lang="en">
    <head>
        <% include ../partials/styles %>
        <title> Practice </title>
        <style = "text/css" media="screen">
            #editor {
                height: 1000px;
                width: 100%;
                margin-left: 0;
            }
        </style>
    </head>
    <body>
        <% include ../partials/navbar %> 

        <div class="row">
            <div class="col">
                <div id="editor">console.log("Ace editor");</div>
