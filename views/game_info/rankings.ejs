<!doctype html>
<html lang="en">

<head>
    <% include ../partials/styles %>
        <title> Rankings </title>
</head>

<body>
    <% include ../partials/navbar %>

        <center>
            <table style="width:50%">
                <tr>
                    <th style="width:5%">
                        Position
                    </th>
                    <th style="width:35%">
                        Name
                    </th>
                    <th style="width:5%">
                        Wins
                    </th>
                    <th style="width:5%">
                        Losses
                    </th>
                    <th style="width:10%">
                        Games won
                    </th>
                    <th style="width:10%">
                        Games Lost
                    </th>
                </tr>
                <% for(var i = 0; i < print.length; i++){ %>
                    <tr>
                        <th style="width:5%">
                            <%= Number(i+1)%>
                        </th>
                        <th style="width:35%">
                            <%= print[i].Username %>
                        </th>
                        <th style="width:5%">
                            <%= print[i].Kills %>
                        </th>
                        <th style="width:5%">
                            <%= print[i].Deaths %>
                        </th>
                        <th style="width:10%">
                            <%= print[i].GamesWon %>
                        </th>
                        <th style="width:10%">
                            <%= print[i].GamesLost %>
                        </th>
                    </tr>
                    <% } %>
                        </form>

            </table>
        </center>

        <% include ../partials/bootstrapjs %>
</body>

</html>