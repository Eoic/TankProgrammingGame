<!doctype html>
<html lang="en">
  <head>
    <% include ../partials/styles %>
    <title> Dashboard </title>
  </head>
  <body>
    <% include ../partials/navbar %> 

    <div class="jumbotron jumbotron-fluid some-bg">
      <div class="container">
        <h1 class="display-4">  <img src="../../img/profile.png" class="img-responsive" style="max-width: 15%; max-height: 15%;"> 
          <%= name %> </h1>
        <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
      </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
          <div class="card">
            <div class="card-header"> PROGRESSION </div>
            <div class="card-body">
              <h3 class="card-text"> LEVEL 1 </h3>
              <br>
                <div class="progress" style="height: 25px;">
                  <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100" style="width: 65%"> 25 / 75 XP </div>
                </div>
            </div>
          </div>
        </div>
    
    <% include ../partials/bootstrapjs %> 
   </body>
</html>